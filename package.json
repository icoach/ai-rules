{
  "name": "ai-rules",
  "version": "1.0.0",
  "description": "A script to transform YAML rules into various formats.",
  "type": "module",
  "main": "src/transform.js",
  "bin": {
    "ai-rules": "./bin/transform.mjs"
  },
  "scripts": {
    "rules:cursor": "npx ai-rules --format cursor",
    "rules:claude": "npx ai-rules --format claude -s python docs",
    "rules:windsurf": "npx ai-rules --format windsurf",
    "commands:cursor": "npx ai-rules --format cursor --type commands",
    "commands:claude": "npx ai-rules --format claude --type commands",
    "commands:cline": "npx ai-rules --format cline --type commands",
    "commands:codex": "npx ai-rules --format codex --type commands",
    "commands:kilo": "npx ai-rules --format kilo --type commands",
    "commands:all": "npm run commands:cursor && npm run commands:claude && npm run commands:cline && npm run commands:codex && npm run commands:kilo",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage"
  },
  "dependencies": {
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  }
}
